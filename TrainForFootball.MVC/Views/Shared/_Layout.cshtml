<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Championship.MVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap-5.3.3-dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />



</head>
<body class="bg-dark text-light">

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #273e47;">
        <div class="container-fluid">
            <div class="row w-100 align-items-center justify-content-between">
                <!-- Colonna logo a sinistra -->
                <div class="col-auto">
                    <a class="navbar-brand" href="#">
                        <img src="https://imgur.com/P85RAdy.png" alt="Logo" style="width: 150px;" />
                    </a>
                </div>

                <!-- Colonna centrale per la navigazione -->
                <div class="col text-center">
                    <ul class="navbar-nav d-flex justify-content-center">
                        <li class="nav-item mx-4">
                            <a class="nav-link" href="/"><i class="fa-solid fa-futbol"></i> Home</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" href="/Match/"><i class="fa-solid fa-calendar-days"></i> Calendar</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" href="/MatchResult/"><i class="fa-solid fa-square-poll-vertical"></i> Results</a>
                        </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link" href="/Standings/"><i class="fa-solid fa-ranking-star"></i> Ranking</a>
                        </li>
                    </ul>
                </div>

                <!-- Colonna login a destra -->
                <div class="col-auto">
                    <a class="btn btn-warning text-white" id="userLogged" onclick="checkData()"></a>
                </div>
                
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark py-3 mt-5 text-center text-muted">
        <div class="container">
            <p class="mb-0">© 2024 TrainForFootball. All rights reserved.</p>
        </div>
    </footer>

    <script>
        var element = document.getElementById("userLogged");    
        if(localStorage.getItem("userLogged") != null) {
            element.innerHTML =  "<i class=\"fa-solid fa-right-from-bracket\"></i> Logout";
            element.id = "LogoutAction";
            element.href = "";
        } else {
            element.innerHTML = "<i class=\"fa-solid fa-user\"></i> Accedi"
            element.href = "/User/"
        }

        function checkData() {
            var element = document.getElementById("LogoutAction");
            if(element != null) {
                console.log("dentro")
                localStorage.removeItem("userLogged");
                location.reload();
            }
        }
    </script>
    <script src="https://kit.fontawesome.com/a7c0a41ac4.js"></script>
    <script src="~/lib/bootstrap-5.3.3-dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
</body>


</html>
